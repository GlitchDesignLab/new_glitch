---
import MainButton from "../components/buttons/MainButton.astro";
---

<section>
  <h1>Dream Big with Bespoke Software Solutions</h1>
  <p>
    From startups to dreamers, we blend user-centered design with bespoke
    software development to bring your ideas to life, scalable, affordable, and
    uniquely yours.
  </p>
  <div class="buttons">
    <MainButton href="#" target="_self" secondary>OUR WORK</MainButton>
    <MainButton href="#" target="_self" primary>GET IN TOUCH</MainButton>
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 2rem;
    height: 100vh;
    padding: 1rem;
    background-image: url("/images/hero_bg.png");
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;

    h1 {
      font-size: var(--mobile-main-title);
      text-transform: uppercase;
      max-width: 800px;
    }

    p {
      max-width: 600px;
      color: var(--dark-text-color);
      font-size: var(--font-size-sm);
    }

    .buttons {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media screen and (min-width: 570px) {
    section {
      padding: 2rem;
      gap: 3rem;
    }
  }

  @media screen and (min-width: 768px) {
    section {
      gap: 3rem;
      h1 {
        font-size: var(--tablet-main-title);
      }
      p {
        font-size: var(--tablet-regular-text);
      }
      .buttons {
        flex-direction: row;
      }
    }
  }

  @media screen and (min-width: 1024px) {
    section {
      h1 {
        margin-top: 2rem;
        font-size: var(--desktop-main-title);
      }
      p {
        max-width: 800px;
        font-size: var(--desktop-regular-text);
      }
    }
  }
</style>
