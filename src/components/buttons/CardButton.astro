---
const { href = "#", target = "_blank"} = Astro.props;
---


<a class="card-button" href={href} target={target} rel="noopener noreferrer">
    <slot />
</a>


<style>
    .card-button {
        display: inline-block;
        padding: 0.7rem 2rem;
        border-radius: 100px;
        text-decoration: none;
        text-transform: uppercase;
        color: var( --light-text-color);
        font-weight: 600;
        transition: all 0.3s ease-in-out;

        background: linear-gradient(
            90deg,
            var(--primary-color),
            var(--secondary-color)
        );
        width: 100%;
        text-align: center;
        border: none;
    }

    .card-button:hover  {
        transform: scale(1.05);
    }
</style>