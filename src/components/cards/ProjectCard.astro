---
import { Image } from "astro:assets";

const { href = "#", title, image } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  title={title}
  class="card"
>
  <Image src={image} alt={title} class="image" />
  <h3>{title}</h3>
</a>

<style>
  .card {
    width: 100%;
    overflow: hidden;
    max-width: 300px;
    height: 300px;
    border-radius: 0.5rem;
    position: relative;

    .image {
      width: 100%;
      object-fit: contain;
      transform: translateY(calc(-18%));
      transition: all 0.45s ease;
    }
    h3 {
      position: absolute;
      bottom: 0;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.795);
      color: white;
      padding: 0.5rem;
      text-transform: uppercase;
      font-weight: 600;
    }

    &:hover {
      .image {
        transition: all 3s ease;
        transform: translateY(calc(-56%));
      }
    }
  }
</style>
